<h1>New Book</h1>
<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %> errors prohibited this book from being saved
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @new_book, url: books_path, local: true do |f| %>
  <h4>New Books</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
<% end %>